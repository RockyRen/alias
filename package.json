{
  "name": "gulp-ts-alias",
  "version": "0.2.1",
  "description": "Use Gulp to resolve Typescript path aliases during compilation.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/",
    "typings/",
    "test/"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "tsc",
    "lint": "eslint src/**/* && tsc --noEmit",
    "test": "./node_modules/.bin/jest --ci --verbose --forceExit --detectOpenHandles",
    "test:coverage": "./node_modules/.bin/jest --coverage --ci",
    "coverage": "./node_modules/.bin/jest --coverage && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "prepublishOnly": "gulp build"
  },
  "author": {
    "name": "David Katz",
    "url": "https://github.com/DoctorJew"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhkatz/gulp-ts-alias"
  },
  "license": "MIT",
  "keywords": [
    "gulpplugin",
    "gulp",
    "typescript",
    "ts",
    "resolve",
    "relative",
    "paths"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "devDependencies": {
    "@types/event-stream": "^3.3.34",
    "@types/jest": "^24.0.0",
    "@types/vinyl": "^2.0.2",
    "event-stream": "^3.3.4",
    "jest": "^24.9.0",
    "merge2": "^1.2.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.2",
    "vinyl": "^2.2.0"
  },
  "dependencies": {
    "map-stream": "0.0.7",
    "plugin-error": "^1.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  }
}
