{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",

    "outDir": "./build",
    "rootDir": "./src",

    "declaration": true,
    "strict": true,
    "sourceMap": true,

    "noImplicitAny": true,
    "alwaysStrict": true,

    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "removeComments": true
  },
  "exclude": [
    "./build/*",
    "./node_modules/*"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
